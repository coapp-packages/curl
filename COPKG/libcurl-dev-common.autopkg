@import "version.inc" ;
@import "libcurl.inc";
@import "outercurve.inc";

package {
    name: "libcurl-dev-common";
    display-name: "libcurl Dev Library-common";
    arch: any;
}

metadata {
    summary: "libcurl developer library (common)";
}

files[headers] {
    root: "..\\include\\curl\\";
    include: {
        "*.h"
    };
    
    trim-path:all;
    
    // ensures that all the header files end up in a subfolder called 'include'
    destination-path:"include\\curl";
}

files[docs] {
    root: "..\\docs\\";
    include: {
        "**"
    };
    
    exclude: {
        "**.gitignore"
    };
    
    trim-path:minimal;
    
    // ensures that all the documentation files end up in a subfolder called 'docs'
    destination-path:"docs";

}

// the 'name' of the developer library isn't terribly important...
developer-library[curl] {
    headers: { 
        headers
    };
    
    docs: {
        docs
    };
}